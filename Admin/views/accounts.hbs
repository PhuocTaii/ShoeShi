{{! Modal add admin}}
<div
  class='modal'
  id='modal-manage-admin'
  data-bs-keyboard='false'
  tabindex='-1'
  aria-labelledby='staticBackdropLabel'
  aria-hidden='true'
>
  <div
    class='modal-dialog modal-dialog-centered modal-dialog-scrollable'
    data-bs-keyboard='false'
    tabindex='-1'
    aria-labelledby='staticBackdropLabel'
    aria-hidden='true'
  >
    <form class='modal-content'>
      <div class='modal-header'>
        <p id='action-admin'></p>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        {{! basic info }}
        <div class='row row-cols-2 g-3'>
          <div class='col'>
            <div class='add-admin'>
              <label for='admin-username'>Username<small class='text-danger'>*</small></label>
              <input type='text' id='admin-username' placeholder='Username' required/>
            </div>
          </div>
          <div class='col'>
            <div class='add-admin'>
              <label for='admin-password'>Password<small class='text-danger'>*</small></label>
              <input 
                type='password' 
                id='admin-password' 
                placeholder='Password' 
                minlength='8' 
                pattern='^(?=.*[a-zA-Z])(?=.*\d).{8,}$' 
                title='Please enter with both letters and numbers, and a minimum of 8 characters.'
                required
              />
            </div>
          </div>
          <div class="col">
            <div class='add-admin'>
              <label for='admin-email'>Email<small class='text-danger'>*</small></label>
              <input id="admin-email" type="email" placeholder='Email'required />
            </div>
          </div>
          <div class="col">
            <div class='add-admin'>
              <label for='admin-name'>Full name</label>
              <input id="admin-name" type="text" placeholder='Full Name'/>
            </div>
          </div>
          <div class="col">
            <div class='add-admin'>
              <p class='form-label'>Gender</p>
              <div id='admin-group' class='form-group'>
                <div class='form-check form-check-inline'>
                  <label for='male' class='mr-3'>Male</label>
                  <input
                    type='radio'
                    id='male'
                    name='gender'
                    value='male'
                    class='form-check-input'
                    checked
                  />
                </div>

                <div class='form-check form-check-inline'>
                  <label for='female' class='mr-3'>Female</label>
                  <input
                    type='radio'
                    id='female'
                    name='gender'
                    value='female'
                    class='form-check-input'
                  />
                </div>
              </div>
            </div>
          </div>
          <div class='col'>
            <div class='add-admin'>
              <label for='admin-phone'>Phone number</label>
              <input id="admin-phone" type='tel' placeholder='Phone Number'/>
            </div>
          </div>
          <div class='col'>
            <div class='add-admin'>
              <label for='admin-address'>Address</label>
              <input id="admin-address" type='text' placeholder='Address' required />
            </div>
          </div>
          <div class='col'>
            <div class='add-admin'>
              <label for='admin-birthday'>Date of birth</label>
              <input id="admin-birthday" type='date' required />
            </div>
          </div>
        </div>


      </div>
      <div class='modal-footer'>
        <button type='submit' class='btn btn-dark'>add</button>
      </div>
    </form>
  </div>
</div>

