<div id='account-container'>
  <h3>ACCOUNTS</h3>

  <div id="userId" style="display: none;">{{userId}}</div>
  <!-- Customer table-->
  <div id="totalUserPage" style="display: none;">{{totalPage}}</div>
  <div class='card mb-4'>
    <div class='card-header'>
      <p class='my-0'>CUSTOMERS</p>
      <div class='action-table'>
        <div class='sort-table'>
          <label for='customer-sort'>Sort by</label>
          <select class='form-select' name='sort-options' id='customer-sort'>
            <option selected value='none'>None</option>
            <option value='name-a-z'>Name: A-Z</option>
            <option value='name-z-a'>Name: Z-A</option>
            <option value='email-a-z'>Email: A-Z</option>
            <option value='email-z-a'>Email: Z-A</option>
            <option value='newest'>Registration time: Newest</option>
            <option value='oldest'>Registration time: Oldest</option>
          </select>
        </div>
        <div class='search-table'>
          <label for='customer-filter'>Filter by</label>
          <select
            class='form-select'
            name='search-options'
            id='customer-filter'
          >
            <option selected value='username'>Username</option>
            <option value='name'>Name</option>
            <option value='email'>Email</option>
          </select>
          <input class='form-control' id="form-control" type='text' />
          <button type='button' class='btn'>Search</button>
        </div>
      </div>
    </div>
    <div class='card-body table-responsive'>
      <table class='table table-striped table-hover'>
        <thead>
          <tr>
            <th>Username</th>
            <th>Name</th>
            <th>Email</th>
            <th>Registration Time</th>
            <th>Ban</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Username</th>
            <th>Name</th>
            <th>Email</th>
            <th>Registration Time</th>
            <th>Ban</th>
          </tr>
        </tfoot>
        <tbody class='table-group-divider' id='table-accounts'>
          {{! handle in js }}
        </tbody>
      </table>
    </div>

    <div class='card-footer'>
      <nav aria-label='navigation table'>
        <ul class='pagination'>
          <li class='page-item'>
            <a
              id='prevPage'
              class='page-link'
              href='?pageUser={{decrement currentPage}}'
              aria-label='Previous'
            >
              <span aria-hidden='true'>&laquo;</span>
            </a>
          </li>
          {{#each pages as |page|}}
            <li class='page-item {{#if (eq page currentPage)}}active{{/if}}'>
              <a class='page-link' href='?pageUser={{page}}' id='page{{page}}'>{{page}}</a>
            </li>
          {{/each}}
          <li class='page-item'>
            <a
              id='nextPage'
              class='page-link'
              href='?pageUser={{increment currentPage}}'
              aria-label='Next'
            >
              <span aria-hidden='true'>&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>

  <!-- Admin table-->
  <div id="totalAdminPage" style="display: none;">{{totalPageAdmin}}</div>
  <div class='card mb-4'>
    <div class='card-header'>
      <div>
        <p class='my-2'>ADMINS</p>
        <button type='button' class='btn btn-dark admin' onclick="toggleAddAdmin()">ADD</button>
      </div>

      <div class='action-table'>
        <div class='sort-table'>
          <label for='customer-sort-admin'>Sort by</label>
          <select class='form-select' name='sort-options' id='customer-sort-admin'>
            <option selected value='none'>None</option>
            <option value='name-a-z'>Name: A-Z</option>
            <option value='name-z-a'>Name: Z-A</option>
            <option value='email-a-z'>Email: A-Z</option>
            <option value='email-z-a'>Email: Z-A</option>
            <option value='newest'>Registration time: Newest</option>
            <option value='oldest'>Registration time: Oldest</option>
          </select>
        </div>
        <div class='search-table'>
          <label for='customer-filter'>Filter by</label>
          <select
            class='form-select'
            name='search-options'
            id='customer-filter-admin'
          >
            <option selected value='username'>Username</option>
            <option value='name'>Name</option>
            <option value='email'>Email</option>
          </select>
          <input class='form-control-admin' id="form-control-admin" type='text' />
          <button type='button' class='btn-admin'>Search</button>
        </div>
      </div>
    </div>

    <div class='card-body table-responsive'>
      <table class='table table-striped table-hover'>
        <thead>
          <tr>
            <th>Username</th>
            <th>Name</th>
            <th>Email</th>
            <th>Registration Time</th>
            <th>Ban</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Username</th>
            <th>Name</th>
            <th>Email</th>
            <th>Registration Time</th>
            <th>Ban</th>
          </tr>
        </tfoot>
        <tbody class='table-group-divider' id="table-admins">

        </tbody>
      </table>
    </div>
    <div class='card-footer'>
      <nav aria-label='navigation table'>
        <ul class='pagination'>
          <li class='page-item'>
            <a
              id='prevPageAdmin'
              class='page-link'
              href='?pageUser={{decrement currentPageAdmin}}'
              aria-label='Previous'
            >
              <span aria-hidden='true'>&laquo;</span>
            </a>
          </li>
          {{#each pagesAdmin as |page|}}
            <li class='page-item'>
              <a class='page-link' href='?pageUser={{page}}' id='pageAdmin{{page}}'>{{page}}</a>
            </li>
          {{/each}}
          <li class='page-item'>
            <a
              id='nextPageAdmin'
              class='page-link'
              href='?pageUser={{increment currentPageAdmin}}'
              aria-label='Next'
            >
              <span aria-hidden='true'>&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</div>

