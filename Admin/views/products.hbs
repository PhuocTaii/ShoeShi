<div id='product-container'>
  <h3>PRODUCTS</h3>

  <div class="row">
    <!-- Filters -->
    <form class='col-2 filter-container' id="filter-form">
      <h4>Filters</h4>
      <div class="cate-section">
        <p>Categories</p>
        <div class="cate-list">
          {{#each categories}}
          <div class="form-check">
            <input id="c-{{this._id}}" class="form-check-input" type="checkbox" name="category" value="{{this.name}}" onchange="handleQuery(event)">
            <label for="c-{{this._id}}" class="form-check-label">
              {{this.name}}
            </label>
          </div>
          {{/each}}
        </div>
      </div>
      <hr>
      <div class="manu-section">
        <p>Manufacturers</p>
        <div class="manu-list">
          {{#each manufacturers}}
          <div class="form-check">
            <input id="m-{{this._id}}" class="form-check-input" type="checkbox" name="manufacturer" value="{{this.name}}" onchange="handleQuery(event)">
            <label for="m-{{this._id}}" class="form-check-label">
              {{this.name}}
            </label>
          </div>
          {{/each}}
        </div>
      </div>
    </form>

    <!-- Product table-->
    <div class='col-10 card'>
      <div class='card-header'>
        <button type='button' class='btn btn-dark product' onclick="toggleAddProduct()">add</button>
        <div class="action-table">
          <div class="sort-table">
            <label for="product-sort">Sort by</label>
            <select class="form-select" name="sort-options" id="product-sort" onchange="handleQuery(event)">
              <option selected value="none">None</option>
              <option value="newest">Creation time: Newest</option>
              <option value="oldest">Creation time: Oldest</option>
              <option value="low-high">Price: Low-High</option>
              <option value="high-low">Price: High-Low</option>
              <option value="purchase-min-max">Total purchase: Min-Max</option>
              <option value="purchase-max-min">Total purchase: Max-Min</option>
            </select>
          </div>
          <div class="search-table">
            <label for="products-filter-name">Name: </label>
            <input class="form-control" type="text" id="products-filter-name" name="product-name" onchange="handleQuery(event)">
            {{!-- <button type="button" class="btn">Search</button> --}}
          </div>
        </div>
      </div>
      <div class='card-body table-responsive'>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Category</th>
              <th>Manufacturer</th>
              <th>Creation Time</th>
              <th>Price</th>
              <th>Amount</th>
              <th>Total purchase</th>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Name</th>
              <th>Category</th>
              <th>Manufacturer</th>
              <th>Creation Time</th>
              <th>Price</th>
              <th>Amount</th>
              <th>Total purchase</th>
              <th>Status</th>
              <th></th>
            </tr>
          </tfoot>
          <tbody id="table-products" class="table-group-divider">
            
          </tbody>
        </table>
      </div>
      <div class="card-footer">
        <nav aria-label="navigation table">
          <ul class="pagination" id="product-pagination">
            
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>

{{! Modal detail }}
<div
  class='modal'
  id='modal-manage-product'
  data-bs-keyboard='false'
  tabindex='-1'
  aria-labelledby='staticBackdropLabel'
  aria-hidden='true'
>
  <div
    class='modal-dialog modal-dialog-centered modal-dialog-scrollable'
    data-bs-keyboard='false'
    tabindex='-1'
    aria-labelledby='staticBackdropLabel'
    aria-hidden='true'
  >
    <form class='modal-content' onsubmit="">
      <div class='modal-header'>
        <p id='action-product'></p>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        {{! basic info }}
        <div class='row row-cols-2 g-3'>
          <div class='col'>
            <div class='info-detail'>
              <label for='name-product'>Name</label>
              <input type='text' id='name-product' required/>
            </div>
          </div>
          <div class='col'>
            <div class='info-detail'>
              <label for='price-product'>Price</label>
              <input type='number' id='price-product' min='0'  required/>
            </div>
          </div>
          <div class='col'>
            <div class='info-detail'>
              <label for='manufacturer-product'>Manufacturer</label>
              <select name='manufacturer' id='manufacturer-product'>
                {{#each manufacturers}}
                <option id='ma-{{this._id}}' value='{{this._id}}'>{{this.name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class='col'>
            <div class='info-detail'>
              <label for='status-product'>Status</label>
              <select name='status' id='status-product'>
                <option value='On stock'>On stock</option>
                <option value='Out of stock'>Out of stock</option>
                <option value='Suspend'>Suspend</option>
              </select>
            </div>
          </div>
          <div class="col">
            <div class='info-detail'>
              <label>Quantity</label>
              <input id="quant-product" type='number' required />
            </div>
          </div>
          <div class='col'>
            <div class='info-detail'>
              <label for='category'>Categories</label>
              <select id='category' class="multi-choices" onchange="addSelectedItem(event, 'cates')">
                <option value=''>Select categories...</option>
                {{#each categories}}
                <option id='ca-{{this._id}}' value='{{this._id}}'>{{this.name}}</option>
                {{/each}}
              </select>
            </div>
            <ul class="chosen-list cates">
            </ul>
          </div>
        </div>

        <div class='row'>
          <div id='photos-product'>
            <div class='heading'>
              <p>Photos</p>
              <div>
                <label class='file-label' for='file-upload'>
                  Choose file
                </label>
                <input
                  id='file-upload'
                  type='file'
                  onchange='addSelectedPhoto(event)'
                />
              </div>
            </div>
            <div id='photos-container'>

            </div>
          </div>
        </div>

        {{! color-size-quantity info }}
        <div class="color-size-quant row">
          <div class="col">
            <label>Color</label>
            <div>
              <select name="" id="color" class="multi-choices" onchange="addSelectedItem(event, 'colors')">
                <option value=''>Select colors...</option>
                {{#each colors}}
                <option id='co-{{this._id}}' value='{{this._id}}'>{{this.color}}</option>
                {{/each}}
              </select>
            </div>
            <ul class="chosen-list colors">
              
            </ul>
          </div>
          <div class="col">
            <label>Size</label>
            <div>
              <select name="" id="size" class="multi-choices" onchange="addSelectedItem(event, 'sizes')">
                <option value=''>Select sizes...</option>
                {{#each sizes}}
                <option id='si-{{this._id}}' value='{{this._id}}'>{{this.size}}</option>
                {{/each}}
              </select>
            </div>
            <ul class="chosen-list sizes"></ul>
          </div>
        </div>

      </div>
      <div class='modal-footer'>
        <button type='submit' class='btn btn-dark'>save</button>
      </div>
    </form>
  </div>
</div>

{{! Modal delete }}
<div
  class='modal'
  id='modal-delete-product'
  data-bs-keyboard='false'
  tabindex='-1'
  aria-labelledby='staticBackdropLabel'
  aria-hidden='true'
>
  <div
    class='modal-dialog modal-dialog-centered modal-dialog-scrollable'
    data-bs-keyboard='false'
    tabindex='-1'
    aria-labelledby='staticBackdropLabel'
    aria-hidden='true'
  >
    <div class='modal-content'>
      <div class='modal-header'>
        <p>Sure you want to delete?</p>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        Are you sure you want to delete this?
      </div>
      <div class='modal-footer'>
        <button
          type='button'
          class='btn btn-secondary'
          data-bs-dismiss='modal'
        >No, cancel</button>
        <button type='button' class='btn btn-danger'>Yes, confirm</button>
      </div>
    </div>
  </div>
</div>

<div id="toast-noti-product">

</div>

