<div id='categories-container'>
  <h3>categories, manufacturers</h3>

  <div class='tables container-fluid overflow-hidden'>
    <div class='row'>
      <!-- Customer table-->
      <div class='col-lg px-0 card'>
        <div class='card-header'>
          <p class='my-0'>categories</p>
          <button
            type='button'
            class='btn btn-dark category'
            onclick='handleAddCate()'
          >add</button>
        </div>
        <div class='card-body table-responsive'>
          <table class='table table-striped table-hover'>
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th> </th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th> </th>
              </tr>
            </tfoot>
            <tbody class='table-group-divider' id='table-category'>

            </tbody>
          </table>
        </div>
      </div>

      <!-- Admin table-->
      <div class='col-lg px-0 card'>
        <div class='card-header'>
          <p class='my-0'>manufacturers</p>
          <button
            type='button'
            class='btn btn-dark manufacturer'
            onclick='handleAddManu()'
          >add</button>
        </div>
        <div class='card-body table-responsive'>
          <table class='table table-striped table-hover'>
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
              </tr>
            </tfoot>
            <tbody class='table-group-divider' id='table-manufacturer'>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

{{! Modal detail }}
<div
  class='modal'
  id='modal-manage-item'
  data-bs-keyboard='false'
  tabindex='-1'
  aria-labelledby='staticBackdropLabel'
  aria-hidden='true'
>
  <div
    class='modal-dialog modal-dialog-centered modal-dialog-scrollable'
    data-bs-keyboard='false'
    tabindex='-1'
    aria-labelledby='staticBackdropLabel'
    aria-hidden='true'
  >
    <div class='modal-content'>
      <div class='modal-header'>
        <p id='action'></p>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        <label for='item-name'>Name:</label>
        <input type='text' id='item-name' />
      </div>
      <div class='modal-footer'>
        <button type='button' class='btn btn-dark confirm-btn'>save</button>
      </div>
    </div>
  </div>
</div>

{{! Modal delete }}
<div
  class='modal'
  id='modal-delete-item'
  data-bs-keyboard='false'
  tabindex='-1'
  aria-labelledby='staticBackdropLabel'
  aria-hidden='true'
>
  <div
    class='modal-dialog modal-dialog-centered modal-dialog-scrollable'
    data-bs-keyboard='false'
    tabindex='-1'
    aria-labelledby='staticBackdropLabel'
    aria-hidden='true'
  >
    <div class='modal-content'>
      <div class='modal-header'>
        <p>Sure you want to delete?</p>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        Are you sure you want to delete this?
      </div>
      <div class='modal-footer'>
        <button
          type='button'
          class='btn btn-secondary'
          data-bs-dismiss='modal'
        >No, cancel</button>
        <button type='button' class='btn btn-danger confirm-btn'>Yes, confirm</button>
      </div>
    </div>
  </div>
</div>

{{#section 'scripts'}}
  <script src='/js/category-manufacturer.js'></script>
{{/section}}