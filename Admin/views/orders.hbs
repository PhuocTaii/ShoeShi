<div id='order-container'>
  <h3>ORDERS</h3>

  <!-- orders table-->
  <div class='card'>
    <div class='card-header'>
      <div class='filter dropdown'>
        <div
          class=''
          type='button'
          data-bs-toggle='dropdown'
          aria-expanded='false'
        >
          Filters
          <i class='ri-filter-3-fill'></i>
        </div>
        <ul class='dropdown-menu dropdown-menu-end'>
					<li class="form-check">
						<input type="checkbox" name="status-pending" id="status-pending" class="form-check-input">
						<label for="status-pending" class="form-check-label">pending</label>
					</li>
					<li class="form-check">
						<input type="checkbox" name="status-shipping" id="status-shipping" class="form-check-input">
						<label for="status-shipping" class="form-check-label">shipping</label>
					</li>
					<li class="form-check">
						<input type="checkbox" name="status-done" id="status-done" class="form-check-input">
						<label for="status-done" class="form-check-label">done</label>
					</li>
        </ul>
      </div>
    </div>
    <div class='card-body table-responsive'>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Username</th>
            <th>Creation Time</th>
            <th>Products</th>
