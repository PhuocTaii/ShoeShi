        <defs>
          <clipPath id='clip0_74_4933'>
            <rect width='22' height='28' fill='white' />
          </clipPath>
        </defs>
      </svg>
      <div class='card-content'>Total orders</div>
      <a class='small stretched-link'>{{orders.length}}</a>
    </div>
  </div>
  <div class='card mb-4'>
    <div class='card-header'>
      <p class='tableName'>overall sales</p>
      <div class='Date'>
        <input type='month' class="date-choosing" id="month" oninput="updateChart()"/>
      </div>
    </div>
    <div class='card-body'><canvas
        id='myAreaChart'
        width='100%'
        height='35'
      ></canvas></div>
  </div>

  <div class='card mb-4'>
    <div class='card-header'>
      <p class='tableName'>best selling product</p>
      <div class='Date'>
        <input type='month' class="date-choosing" id="month-table" oninput="updateTable()"/>
      </div>
    </div>
    <div class='card-body table-responsive'>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Sold</th>
            <th>Revenue</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Name</th>
            <th>Sold</th>
            <th>Revenue</th>
          </tr>
        </tfoot>
        <tbody class="table-group-divider" id="table-data"></tbody>
      </table>
    </div>
  </div>
</div>

{{#section 'scripts'}}
  <script
    src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js'
    crossorigin='anonymous'
  ></script>
  <script src='/assets/demo/chart-area-demo.js'></script>
  <script src='/js/admin-index.js'></script>
{{/section}}