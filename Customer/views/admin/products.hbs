{{! Modal detail }}
<div
  class='modal'
  id='modal-manage-product'
  data-bs-keyboard='false'
  tabindex='-1'
  aria-labelledby='staticBackdropLabel'
  aria-hidden='true'
>
  <div
    class='modal-dialog modal-dialog-centered modal-dialog-scrollable'
    data-bs-keyboard='false'
    tabindex='-1'
    aria-labelledby='staticBackdropLabel'
    aria-hidden='true'
  >
    <div class='modal-content'>
      <div class='modal-header'>
        <p id='action-product'></p>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        {{! basic info }}
        <div class='row row-cols-2 g-3'>
          <div class='col'>
            <div class='info-detail'>
              <label for='name-product'>Name</label>
              <input type='text' id='name-product' />
            </div>
          </div>
          <div class='col'>
            <div class='info-detail'>
              <label for='price-product'>Price</label>
              <input type='number' id='price-product' min='0' />
            </div>
          </div>
          <div class='col'>
            <div class='info-detail'>
              <label for='manufacturer-product'>Manufacturer</label>
              <select name='manufacturer' id='manufacturer-product'>
                <option value='Nike'>Nike</option>
                <option value='Adidas'>Adidas</option>
                <option value='Vans'>Vans</option>
              </select>
            </div>
          </div>
          <div class='col'>
            <div class='info-detail'>
              <label for='status-product'>Status</label>
              <select name='status' id='status-product'>
                <option value='On stock'>On stock</option>
                <option value='Out of stock'>Out of stock</option>
                <option value='Suspend'>Suspend</option>
              </select>
            </div>
          </div>
          <div class="col">
            <div class='info-detail'>
              <label>Quantity</label>
              <input id="quant-product" type='number'/>
            </div>
          </div>
          <div class='col'>
            <div class='info-detail'>
              <label for='category'>Categories</label>
              <select id='category' class="multi-choices" onchange="addSelectedItem(event, 'cates')">
                <option value=''>Select categories...</option>
                <option value='Running shoes'>Running shoes</option>
                <option value='Sneakers'>Sneakers</option>
                <option value='Slides'>Slides</option>
              </select>
            </div>
            <ul class="chosen-list cates">
            </ul>
          </div>
        </div>

        <div class='row'>
          <div id='photos-product'>
            <div class='heading'>
              <p>Photos</p>
              <div>
                <label class='file-label' for='file-upload'>
                  Choose file
                </label>
                <input
                  id='file-upload'
                  type='file'
                  onchange='addSelectedPhoto(event)'
                />
              </div>
            </div>
            <div id='photos-container'>

            </div>
          </div>
        </div>

        {{! color-size-quantity info }}
        <div class="color-size-quant row">
          <div class="col">
            <label>Color</label>
            <div>
              <select name="" id="color" class="multi-choices" onchange="addSelectedItem(event, 'colors')">
                <option value=''>Select colors...</option>
                <option value="Black">Black</option>
                <option value="White">White</option>
                <option value="Red">Red</option>
              </select>
            </div>
            <ul class="chosen-list colors">
              
            </ul>
          </div>
          <div class="col">
            <label>Size</label>
            <div>
              <select name="" id="size" class="multi-choices" onchange="addSelectedItem(event, 'sizes')">
                <option value=''>Select sizes...</option>
                <option value="36">36</option>
                <option value="37">37</option>
                <option value="">38</option>
                <option value="">39</option>
                <option value="">40</option>
                <option value="">41</option>
                <option value="">42</option>
                <option value="">43</option>
                <option value="">44</option>
                <option value="">45</option>
              </select>
            </div>
            <ul class="chosen-list sizes"></ul>
          </div>
        </div>

      </div>
      <div class='modal-footer'>
        <button type='button' class='btn btn-dark' onclick="handleSaveProduct()">save</button>
      </div>
    </div>
  </div>
</div>

{{! Modal delete }}
<div
  class='modal'
  id='modal-delete-product'
  data-bs-keyboard='false'
  tabindex='-1'
  aria-labelledby='staticBackdropLabel'
  aria-hidden='true'
>
  <div
    class='modal-dialog modal-dialog-centered modal-dialog-scrollable'
    data-bs-keyboard='false'
    tabindex='-1'
    aria-labelledby='staticBackdropLabel'
    aria-hidden='true'
  >
    <div class='modal-content'>
      <div class='modal-header'>
        <p>Sure you want to delete?</p>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        Are you sure you want to delete this?
      </div>
      <div class='modal-footer'>
        <button
          type='button'
          class='btn btn-secondary'
          data-bs-dismiss='modal'
        >No, cancel</button>
        <button type='button' class='btn btn-danger'>Yes, confirm</button>
      </div>
    </div>
  </div>
</div>

