<div class='container'>
  <h1 class='title fw-bold text-center my-5'>YOUR ORDERS</h1>

  {{#each formattedOrders}}

    <div
      class='row orderView my-4'
      data-toggle='modal'
      data-target='#detailModal'
      data-id='{{this._id}}'
    >
      <div class='row fs-5'>
        <div class='d-inline-flex justify-content-between'>
          <div class='time fw-bold'>{{formatDateTime this.date}}</div>
          <div class='status text-muted'>{{this.status}}</div>
        </div>
      </div>

      <hr class='my-3 bg-black' />

      <div class='row order-detail'>
        {{#each this.items}}
          <div class='d-inline-flex justify-content-between'>
            <div class='order-name'>{{this.itemName}}</div>
            <div class='order-price'>{{this.itemPrice}}đ</div>
          </div>
        {{/each}}

      </div>

      <hr class='my-3 bg-black' />

      <div class='row fs-5'>
        <div class='total-price fw-bold'>{{this.totalPrice}}đ</div>
      </div>
    </div>
  {{/each}}

</div>

<!-- Modal -->
<div
  class='modal fade'
  id='detailModal'
  tabindex='-1'
  role='dialog'
  aria-labelledby='detailModalTitle'
  aria-hidden='true'
>
  <div class='modal-dialog modal-dialog-centered' role='document'>
    <div class='modal-content'>
      <div class='modal-body'>
        <div class='container'>
          <div class='d-flex flew-row justify-content-between'>
            <h3 class='fw-bold mb-3 date-modal'>Date | Time</h3>

          </div>
          <div class='status-modal text-muted'></div>
          <div>
            <small class='fw-bold'>Address:</small>
            <small class='address-modal'></small>
          </div>

          <hr class='my-3 bg-black' />

          <div>
            <div class='fw-bold'>ORDER SUMMARY:</div>
            <div class="all-items-modal">

            </div>
          </div>

          <hr class='my-3 bg-black' />

          <div class='d-flex flex-row justify-content-between'>
            <div class='title'>Subtotal</div>
            <div class='subtotal-modal'></div>
          </div>

          <div class='d-flex flex-row justify-content-between'>
            <div class='title'>Delivery</div>
            <div>20,000 đ</div>
          </div>

          <div class='d-flex flex-row justify-content-between mt-3'>
            <div class='title fw-bold'>TOTAL COST</div>
            <div class='total-modal'></div>
          </div>

        </div>

      </div>

    </div>
  </div>
</div>

{{#section 'scripts'}}
  <script src='/js/order.js'></script>
{{/section}}