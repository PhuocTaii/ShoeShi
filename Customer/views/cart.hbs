<div class='container-fluid my-5'id="user-cart" data-user = {{user}}>
  <div class='row mx-0'>
    <div class='col-lg-7'>
      <div class='row fs-1 fw-bold mb-3'>YOUR CART</div>
      {{#if user}}
        {{#each productList}}
          <div class="item row my-3">
              <div class='col-md-3 p-0'>
                <img
                    src='{{this.image}}'
                    class='img-fluid'
                    alt='cart img'
                  />
              </div>
            <div class='col-md-9 mx-auto px-4 mt-2'>
              <div class='row h-100'>
                <!-- product name  -->
                <div class='left-box-info col-6 card-title'>
                  <p class='mb-3 fw-bold'>{{this.product}}</p>
                  <div class='info'>
                    <p class='mb-3'  id="product-color-{{this.id}}">Color: {{this.color}}</p>
                    <p class='mb-3' id="product-size-{{this.id}}">Size: {{this.size}}</p>
                    <div class='mb-3 input-quant'>
                      <label>Quantity: </label>
                    <input type='number' id="{{this.id}}" required min='1' value='{{this.quantity}}' oninput="updateCart('{{this.productID}}', '{{this.colorId}}', '{{this.sizeId}}')" />
                    </div>
                  </div>
                </div>
                <div class='right-box-info col-6'>
                <p class='m-0 fw-bold' data-product-price='{{this.price}}' id="product-price-{{this.id}}">{{this.price}}</p>
                  <img class='mb-3' src='assets/img/trash-icon.svg' alt='' />
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      {{else}}
        <div id="local-cart"></div>
      {{/if}}
    </div>
    <div class='col-lg-5 px-5'>
      <button class='btn bg-dark text-white fw-bold w-100 py-3'>CHECK OUT</button>
      <h4 class='py-3 fw-bold'>ORDER SUMMARY</h4>
      <div class='row'>
        <div class='col'>
          {{#if user}}
            <div id="log-total-item"> {{orderSummary.totalAmount}} items</div>
          {{else}}
            <div id="total-item"></div>
          {{/if}}
          <div>Delivery</div>
        </div>
        <div class='col right-box'>
          {{#if user}}
            <div id="log-total-price">{{formatPrice orderSummary.totalPrice}}</div>
          {{else}}
            <div id="total-price"></div>
          {{/if}}

          <div>{{formatPrice 20000}}</div>
        </div>
      </div>
      <div class='row fw-bold py-3'>
        <div class='col'>
          <div>Total</div>
        </div>
        <div class='col right-box'>
          {{#if user}}      
            <div id="log-total">{{formatPrice orderSummary.total}}â‚«</div>
          {{else}}
            <div id="total"></div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>


{{#section 'scripts'}}
  <script src='/js/customer-cart.js'></script>
  <script src='/js/hbsHelpers.js'></script>
{{/section}}
