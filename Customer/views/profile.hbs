<div class='container'>
  <h1 class='title fw-bold text-center my-5' id="main-profile-detail" profile-id={{user}}>YOUR PROFILE</h1>

  <div class='row space'></div>

  <div class='row my-3'>
    <div class='col-auto'>
      <div id="imageContainer">
        <img
          src= {{user.customerImage}}
          alt='Avatar'
          class='img-fluid avatar'
          id="customer-ava"
        />
      </div>
      <input type="file" id="fileInput" name="customer-ava">
    </div>
    <div class='col d-flex align-items-center'>
      <h4 class='mb-0'>{{user.name}}</h4>
    </div>
  </div>

  <div class='row'>
    <div class='col-lg'>
      <div class='text-uppercase fs-3 mb-3'>details</div>

      <form class='form-details' id='form-details' onsubmit="updateProfile(event)">
        <div class='mb-2'>
          <label for='email' class='form-label'>Email
            <small class='text-danger'>*</small></label>
          <input
            type='email'
            class='form-control fs-6'
            placeholder='Email'
            id='email'
            name='email'
            value='{{user.email}}'
            required
          />
        </div>

        <div class='mb-2'>
          <label for='full-name' class='form-label'>Full name
            <small class='text-danger'>*</small></label>
          <input
            type='text'
            class='form-control fs-6'
            placeholder='Full Name'
            id='full-name'
            name="name"
            value='{{user.name}}'
            required
          />
        </div>

        <div class='mb-2'>
          <p class='form-label'>Gender</p>
          <div id='gender-group' class='form-group'>
            <div class='form-check form-check-inline'>
              <label for='male' class='mr-3'>Male</label>
              <input
                type='radio'
                id='male'
                name='gender'
                value='male'
                class='form-check-input'
                {{#ifEquals user.gender "male"}}checked{{/ifEquals}}
              />
            </div>

            <div class='form-check form-check-inline'>
              <label for='female' class='mr-3'>Female</label>
              <input
                type='radio'
                id='female'
                name='gender'
                value='female'
                class='form-check-input'
                {{#ifEquals user.gender "female"}}checked{{/ifEquals}}
              />
            </div>
          </div>
        </div>

        <div class='mb-2'>
          <label for='phone-number' class='form-label'>Phone number</label>
          <input
              type='tel'
              class='form-control fs-6'
              placeholder='Phone Number'
              id='phone-number'
              name="phoneNum"
              value='{{user.phoneNum}}'
              required
          />
      </div>

        <div class='mb-2'>
          <label for='address' class='form-label'>Address</label>
          <input
            type='text'
            class='form-control fs-6'
            placeholder='Address'
            id='address'
            name="address"
            value='{{user.address}}'
          />
        </div>

        <div class='mb-2'>
          <label for='birthday' class='form-label'>Date of birth</label>
          <input type='date' class='form-control fs-6' id='birthday' name="birthday" value='{{formatDate user.birthday}}'/>
        </div>

        <button
          class='btn btn-dark fs-6 text-center my-4 px-5 py-3'
          type='submit'
        >
          SAVE</button>
      </form>
    </div>

    <div class='col-lg'>
      <div class='text-uppercase fs-3 mb-3'>Change password</div>

      <form class='form-reset-password' id='form-reset-password' onsubmit="updatePassword(event)">
        <div class='mb-2'>
          <label for='current-password' class='form-label'>Current password
            <small class='text-danger'>*</small></label>
          <input
            type='password'
            class='form-control fs-6'
            placeholder='Current password'
            id='current-password'
            minlength='8'
            {{!-- pattern='(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}' --}}
            {{!-- oninput="checkOldPassword(this)" --}}
            required
          />
        </div>

        <div class='mb-2'>
          <label for='new-password' class='form-label newpassword'>New Password
            <small class='text-danger'>*</small></label>
          <input
            type='password'
            class='form-control fs-6'
            placeholder='New password'
            id='new-password'
            required
            minlength='8'
            {{!-- pattern='(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}' --}}
          />
        </div>

        <div class='mb-2'>
          <label for='confirm-password' class='form-label confirm-password'>Confirm Password
            <small class='text-danger'>*</small></label>
          <input
            type='password'
            class='form-control fs-6'
            placeholder='Confirm password'
            id='confirm-password'
            required
            minlength='8'
            {{!-- pattern='(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}' --}}
          />
        </div>

        <button
          class='btn btn-dark fs-6 text-center my-4 px-5 py-3'
          type='submit'
        >
          SAVE</button>
      </form>

    </div>
  </div>
</div>


{{#section 'scripts'}}
    <script src='/js/profile.js'></script>
{{/section}}