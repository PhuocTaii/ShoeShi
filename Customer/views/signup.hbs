<!--SIGN UP CONTAINER-->
<div id="signup-container">
  <!--LOGO-->
  <div class='mb-2 mx-auto logo-container'>
    <img src='/assets/img/logo.png' alt='logo' />
    SHOESHI
  </div>
  <div class='header-text mb-2 text-center fs-3'>
    <p class='m-0'>SIGN UP</p>
  </div>
  <!--END LOGO-->

  <!--FORM-->
  <form id='form-signup'>
    <div class="row row-cols-2">
      <div class='mb-2 col'>
        <label for='username' class='form-label'>Username
          <small class='text-danger'>*</small>
        </label>
        <input
          type='text'
          class='form-control fs-6'
          placeholder='Username'
          id='username'
          name='username'
          required
          oninput="checkValidUsername(this.value)"
          title='Please enter 6 to 20 characters'
          aria-describedby="feedback-username"
        />
        <div id="feedback-username" class="invalid-feedback"></div>
      </div>

      <div class='mb-2 col'>
        <label for='password' class='form-label'>Password
          <small class='text-danger'>*</small></label>
        <input
          type='password'
          class='form-control fs-6'
          placeholder='Password'
          id='password'
          name='password'
          required
          oninput="checkValidPassword(this.value)"
          title='Please enter with both letters and numbers, and a minimum of 8 characters.'
          aria-describedby="feedback-password"
        />
        <div id='feedback-password' class="invalid-feedback"></div>
      </div>

      <div class='mb-2 col'>
        <label for='email' class='form-label'>Email
          <small class='text-danger'>*</small></label>
        <input
          type='email'
          class='form-control fs-6'
          placeholder='Email'
          id='email'
          required
          name='email'
          oninput="checkValidEmail(this.value)"
          title='Please enter a valid email address'
          aria-describedby="feedback-email"
        />
        <div id='feedback-email' class="invalid-feedback">Email is invalid</div>
      </div>

      <div class='mb-2 col'>
        <label for='full-name' class='form-label'>Full name</label>
        <input
          type='text'
          class='form-control fs-6'
          placeholder='Full Name'
          id='full-name'
          name='name'
        />
      </div>

      <div class='mb-2 col'>
        <p class='form-label'>Gender</p>
        <div id='gender-group' class='form-group'>
          <div class='form-check form-check-inline'>
            <label for='male' class='mr-3'>Male</label>
            <input
              type='radio'
              id='male'
              name='gender'
              value='male'
              class='form-check-input'
              checked
            />
          </div>
          <div class='form-check form-check-inline'>
            <label for='female' class='mr-3'>Female</label>
            <input
              type='radio'
              id='female'
              name='gender'
              value='female'
              class='form-check-input'
            />
          </div>
        </div>
      </div>

      <div class='mb-2 col'>
        <label for='phone-number' class='form-label'>Phone number</label>
        <input
          type='tel'
          class='form-control fs-6'
          placeholder='Phone Number'
          id='phone-number'
          name='phoneNum'
          title="Please enter a valid phone number"
        />
      </div>

      <div class='mb-2 col'>
        <label for='address' class='form-label'>Address</label>
        <input
          type='text'
          class='form-control fs-6'
          placeholder='Address'
          id='address'
          name='address'
        />
      </div>

      <div class='mb-2 col'>
        <label for='birthday' class='form-label'>Date of birth</label>
        <input
          type='date'
          class='form-control fs-6'
          id='birthday'
          name='birthday'
        />
      </div>
    </div>

    <div class='btn-container mx-auto mb-3 mt-3'>
      <button
        class='btn btn-lg btn-dark w-20 fs-6 mx-auto text-center'
        type='submit'
      >
        Sign up</button>
    </div>
    <div class='row mx-auto text-center'>
      <p class='p-0'>Already have an account?
        <a class='text-link' href='/login'>Login</a>
      </p>
    </div>

  </form>
  <!--END FORM-->

  <!--OTHER METHOD-->
  <div class="other-method-container">
    <div class="title">
      <div class="line"></div>
      <p class="text">Or login with</p>
      <div class="line"></div>
    </div>
    <div class="social-container container-fluid">
      <a href="/oauth2/google" class="btn btn-outline-dark btn-social">
        <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="50" height="50" viewBox="0 0 48 48">
          <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"></path><path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"></path><path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"></path><path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"></path>
        </svg>
        <p>Google</p>
      </a>
    </div>
  </div>
  <!--END OTHER METHOD-->

</div>
<!--END SIGN UP CONTAINER-->


<!--CHECK MAIL CONTAINER-->
<div id="check-mail-container" class="hide-container">
  <p class="title-check-mail">verify your email address</p>

  <div>
    <p>To start using ShoeShi, confirm your email address with the email we sent to:</p>
    <p id="mail-sent"></p>
    <button type="button" class="btn btn-dark resend-mail" onclick="resendConfirmEmail()">Resend email</button>
  </div>

</div>
<!--END CHECK MAIL CONTAINER-->

