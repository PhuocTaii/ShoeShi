<!--SIGN UP CONTAINER-->
<div id="signup-container">
  <!--LOGO-->
  <div class='mb-2 mx-auto logo-container'>
    <img src='/assets/img/logo.png' alt='logo' />
    SHOESHI
  </div>
  <div class='header-text mb-2 text-center fs-3'>
    <p class='m-0'>SIGN UP</p>
  </div>
  <!--END LOGO-->

  <!--FORM-->
  <form id='form-signup'>
    <div class="row row-cols-2">
      <div class='mb-2 col'>
        <label for='username' class='form-label'>Username
          <small class='text-danger'>*</small>
        </label>
        <input
          type='text'
          class='form-control fs-6'
          placeholder='Username'
          id='username'
          name='username'
          required
          onchange="checkValidUsername(this.value)"
          title='Please enter 6 to 20 characters'
          aria-describedby="feedback-username"
        />
        <div id="feedback-username" class="invalid-feedback"></div>
      </div>

      <div class='mb-2 col'>
        <label for='password' class='form-label'>Password
          <small class='text-danger'>*</small></label>
        <input
          type='password'
          class='form-control fs-6'
          placeholder='Password'
          id='password'
          name='password'
          required
          onchange="checkValidPassword(this.value)"
          title='Please enter with both letters and numbers, and a minimum of 8 characters.'
          aria-describedby="feedback-password"
        />
        <div id='feedback-password' class="invalid-feedback"></div>
      </div>

      <div class='mb-2 col'>
        <label for='email' class='form-label'>Email
          <small class='text-danger'>*</small></label>
        <input
          type='email'
          class='form-control fs-6'
          placeholder='Email'
          id='email'
          required
          name='email'
          onchange="checkValidEmail(this.value)"
          title='Please enter a valid email address'
          aria-describedby="feedback-email"
        />
        <div id='feedback-email' class="invalid-feedback"></div>
      </div>

      <div class='mb-2 col'>
        <label for='full-name' class='form-label'>Full name</label>
        <input
          type='text'
          class='form-control fs-6'
          placeholder='Full Name'
          id='full-name'
          name='name'
        />
      </div>

      <div class='mb-2 col'>
        <p class='form-label'>Gender</p>
        <div id='gender-group' class='form-group'>
          <div class='form-check form-check-inline'>
            <label for='male' class='mr-3'>Male</label>
            <input
              type='radio'
              id='male'
              name='gender'
              value='male'
              class='form-check-input'
              checked
            />
          </div>
          <div class='form-check form-check-inline'>
            <label for='female' class='mr-3'>Female</label>
            <input
              type='radio'
              id='female'
              name='gender'
              value='female'
              class='form-check-input'
            />
          </div>
        </div>
      </div>

      <div class='mb-2 col'>
        <label for='phone-number' class='form-label'>Phone number</label>
        <input
          type='tel'
          class='form-control fs-6'
          placeholder='Phone Number'
          id='phone-number'
          name='phoneNum'
        />
      </div>

      <div class='mb-2 col'>
        <label for='address' class='form-label'>Address</label>
        <input
          type='text'
          class='form-control fs-6'
          placeholder='Address'
          id='address'
          name='address'
        />
      </div>

      <div class='mb-2 col'>
        <label for='birthday' class='form-label'>Date of birth</label>
        <input
          type='date'
          class='form-control fs-6'
          id='birthday'
          name='birthday'
        />
      </div>
    </div>

    <div class='btn-container mx-auto mb-3 mt-3'>
      <button
        class='btn btn-lg btn-dark w-20 fs-6 mx-auto text-center'
        type='submit'
      >
        Sign up</button>
    </div>
    <div class='row mx-auto text-center'>
      <p class='p-0'>Already have an account?
        <a class='text-link' href='/login'>Login</a>
      </p>
    </div>

  </form>
  <!--END FORM-->

  </div>
  <!--END OTHER METHOD-->

</div>
<!--END SIGN UP CONTAINER-->


<!--CHECK MAIL CONTAINER-->
<div id="check-mail-container" class="hide-container">
  <p class="title-check-mail">verify your email address</p>

  <div>
    <p>To start using ShoeShi, confirm your email address with the email we sent to:</p>
    <p id="mail-sent"></p>
    <button type="button" class="btn btn-dark resend-mail" onclick="resendConfirmEmail()">Resend email</button>
  </div>

</div>
<!--END CHECK MAIL CONTAINER-->

{{#section 'scripts'}}
  <script src="/js/customer-signup.js"></script>
{{/section}}