<div class="mb-2 mx-auto logo-container">
    <img src="/assets/img/logo.png" alt="logo">
    SHOESHI
</div>
<div class="header-text mb-2 text-center fs-3">
    <p class="m-0">SIGN UP</p>
</div>

<form class="form-signup">
    <div class="mb-2">
        <label for="username" class="form-label">Username <small class="text-danger">*</small></label>
        <input
            type="text"
            class="form-control fs-6"
            placeholder="Username"
            id="username"
            required
        />
    </div>

    <div class="mb-2">
        <label for="password" class="form-label">Password <small class="text-danger">*</small></label>
        <input
            type="password"
            class="form-control fs-6"
            placeholder="Password"
            id="password"
            required
            minlength="8"
            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
        />
        <div class="form-text">Minimum of 8 characters. Include letters and numbers</div>
    </div>

    <div class="mb-2">
        <label for="email" class="form-label">Email <small class="text-danger">*</small></label>
        <input
            type="email"
            class="form-control fs-6"
            placeholder="Email"
            id="email"
            required
        />
    </div>

    <div class="mb-2">
        <label for="full-name" class="form-label">Full name <small class="text-danger">*</small></label>
        <input
            type="text"
            class="form-control fs-6"
            placeholder="Full Name"
            id="full-name"
        />
    </div>

    <div class="mb-2">
        <p class="form-label">Gender</p>
        <div id="gender-group" class="form-group">
            <div class="form-check form-check-inline">
                <label for="male" class="mr-3">Male</label>
                <input
                    type="radio"
                    id="male"
                    name="gender"
                    value="male"
                    class="form-check-input"
                    checked
                />
            </div>

            <div class="form-check form-check-inline">
                <label for="female" class="mr-3">Female</label>
                <input
                    type="radio"
                    id="female"
                    name="gender"
                    value="female"
                    class="form-check-input"
                />
            </div>

            {{!-- <div class="form-check form-check-inline">
                <label for="male" class="mr-3">Other</label>
                <input
                    type="radio"
                    id="other"
                    name="gender"
                    class="form-check-input"
                />
            </div> --}}
        </div>
    </div>

    <div class="mb-2">
        <label for="phone-number" class="form-label">Phone number</label>
        <input
            type="tel"
            class="form-control fs-6"
            placeholder="Phone Number"
            id="phone-number"
        />
    </div>

    <div class="mb-2">
        <label for="address" class="form-label">Address</label>
        <input
            type="text"
            class="form-control fs-6"
            placeholder="Address"
            id="address"
        />
    </div>

    <div class="mb-2">
        <label for="birthday" class="form-label">Date of birth</label>
        <input
            type="date"
            class="form-control fs-6"
            id="birthday"
        />
    </div>

    <div class="btn-container mx-auto mb-3 mt-3">
        <button
            class="btn btn-lg btn-dark w-20 fs-6 mx-auto text-center"
            type="submit"
        >Sign up</button>
    </div>
    <div class="row mx-auto text-center">
        <p class="p-0">Already have an account?
            <a class="text-link" href="/login">Login</a>
        </p>
    </div>
</form>