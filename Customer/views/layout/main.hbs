<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta
      name='viewport'
      content='width=device-width, initial-scale=1, shrink-to-fit=no'
    />
    <meta name='description' content='' />
    <meta name='author' content='' />
    <link rel="icon" href="/assets/img/logo.png">
    <title>ShoeShi</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN'
      crossorigin='anonymous'
    />
    <link href='/stylesheets/style.css' rel='stylesheet' />
    <link href='/stylesheets/{{extraStyles}}' rel='stylesheet' />

    <link
      href='https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css'
      rel='stylesheet'
    />

    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL'
      crossorigin='anonymous'
    ></script>

    <script src='https://code.jquery.com/jquery-3.6.4.min.js'></script>
  </head>
  <body>
    <!-- Header -->
    <header id='header-container'>
      <a class='logo-container' href='/'>
        <img src='/assets/img/logo.png' alt='logo' />
        SHOESHI
      </a>
      <!-- Menu header -->
      <nav class='menu-header'>
        <a href='/product?category=Men'>Men</a>
        <a href='/product?category=Women'>Women</a>
        <a href='/product?category=Kids'>Kids</a>
        <div class='search-bar'>
          <i class='ri-search-2-line'></i>
          <input type='text' placeholder='Search...' />
        </div>
        <a class='cart' href='/cart'>
          <i class='ri-shopping-cart-line'></i>
          <div class='number-cart-items' id="number-cart-items">
            {{!-- {{cart}} --}}
            {{#if user}}
              {{prodList.length}}
            {{else}}
            <script>
              if(!localStorage.getItem('cartData')) {
                localStorage.setItem('cartData', JSON.stringify([]))
              }
              const cartSize = JSON.parse(localStorage.getItem('cartData')).length || 0
              document.getElementById("number-cart-items").innerHTML =  cartSize
            </script>
            {{/if}}
          </div>
        </a>
        {{#if user}}      
        <a href='/order'><i class="ri-file-list-line"></i>  </a> 
        <a href='/profile'><i class='ri-user-3-line'></i></a>
        <a href='/logout' class="fw-bold">Log Out</a>
        {{else}}
        <a href='/login' class="fw-bold">Log In</a>
        {{/if}}
      </nav>
      <!-- End Menu header -->

      <!-- Menu sidebar -->
      <a
        class='toggle-menu-sidebar'
        data-bs-toggle='offcanvas'
        href='#menu-sidebar'
        role='button'
        aria-controls='offcanvasExample'
      >
        <i class='ri-menu-line'></i>
      </a>
      <div
        class='offcanvas offcanvas-end'
        tabindex='-1'
        id='menu-sidebar'
        aria-labelledby='offcanvasWithBothOptionsLabel'
      >
        <div class='offcanvas-header'>
          <button
            type='button'
            class='btn-close'
            data-bs-dismiss='offcanvas'
            aria-label='Close'
          ></button>
        </div>
        <div class='offcanvas-body'>
          <a href='/product?category=Men'>Men</a>
          <a href='/product?category=Women'>Women</a>
          <a href='/product?category=Kids'>Kids</a>
          <div class='search-bar'>
            <i class='ri-search-2-line'></i>
            <input type='text' placeholder='Search...' />
          </div>
          <a class='cart' href='/cart'>
            <i class='ri-shopping-cart-line'></i>
            <div class='number-cart-items' id="number-cart-items">
              {{#if user}}
                {{prodList.length}}
              {{else}}
              <script>
                document.getElementById("number-cart-items").innerHTML = cartSize
              </script>
              {{/if}}
            </div>
          </a>
          <a href='/login'><i class='ri-user-3-line'></i></a>
        </div>
      </div>
      <!-- End Menu sidebar -->
    </header>
    <!-- End Header -->

    <!-- Main content of page -->
    <div class='page-content'>
      <div class='page-main-content'>
        {{{body}}}
      </div>
    </div>
    <!-- End Main content of page -->

    <!-- Footer -->
    <footer class='mt-auto'>
      <div class='helper-links'>
        <a class='heading' href='#'>ABOUT SHOESHI</a>
        <div class='get-help'>
          <div class='heading'>GET HELP</div>
          <a href='#'>Delivery</a>
          <a href='#'>Payment options</a>
          <a href='#'>Contact us</a>
        </div>
      </div>
      <div class='social-links'>
        <a href='https://www.facebook.com/ngophuoc.tai.17/'target="_blank"><i class='ri-facebook-circle-fill'></i></a>
        <a href='https://www.instagram.com/phuoc_taiii17/'target="_blank"><i class='ri-instagram-line'></i></a>
      </div>
    </footer>
    <!-- End Footer -->

    <script
      src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js'
    ></script>
    <script
      src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js'
    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.8/handlebars.min.js" integrity="sha512-E1dSFxg+wsfJ4HKjutk/WaCzK7S2wv1POn1RRPGh8ZK+ag9l244Vqxji3r6wgz9YBf6+vhQEYJZpSjqWFPg9gg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    {{!-- <script src='/js/logout.js'></script> --}}
    {{{_sections.scripts}}}
  </body>
</html>