<div class='container-fluid mx-0'>
  <div class='body-head'>
    <p class='body-tittle'>PRODUCTS LIST</p>
  </div>
  <div class='body-container'>
    <form class='product-filter' id="filter-form">
      <p>Filters</p>
      <div class='product-name-block'>
        <p>Product name</p>
        <input id="productName" name="product-name" class='product-name' placeholder="Input product name"/>
      </div>
      <div class='component'>
        <p>Category</p>
        <div class='list'>
          {{#each categories}}
            <div class='list-component'>
              <input type='checkbox' class='list-checkbox' name="category" value="{{this.name}}"/>
              <p>{{this.name}}</p>
          </div>
          {{/each}}
        </div>
      </div>
      <div class='component'>
        <p>Brand</p>
        <div class='list'>
          {{#each manufacturers}}
            <div class='list-component'>
              <input type='checkbox' class='list-checkbox' name="manufacturer" value="{{this.name}}"/>
              <p>{{this.name}}</p>
          </div>
          {{/each}}
        </div>
      </div>
      <div class='component'>
        <p>Price</p>

        <div class='range_container'>
          <div class='sliders_control'>
            <input
              id='fromSlider'
              type='range'
              value='100000'
              min='100000'
              max='9000000'
            />
            <input
              id='toSlider'
              type='range'
              value='9000000'
              min='100000'
              max='9000000'
            />
          </div>
          <div class='form_control'>
            <div class='form_control_container'>
              <input
                name = 'from-input'
                class=''
                type='number'
                id='fromInput'
                value='100000'
                min='100000'
                max='9000000'
              />
            </div>
            <div class='form_control_container'>
              <input
                name = 'to-input'
                class=''
                type='number'
                id='toInput'
                value='9000000'
                min='100000'
                max='9000000'
              />
            </div>
          </div>
        </div>
      </div>
        <button class="filter-but" type="submit">Filter</button>
    </form>
    <div class='main-content'>
      <div class='content-header'>
        <nav aria-label='breadcrumb'>
          <ol class='breadcrumb'>
            <li class='breadcrumb-item'><a href='#'>Home</a></li>
            <li class='breadcrumb-item active' aria-current='page'><a
              >Men</a></li>
          </ol>
        </nav>
        <div class='sort-info'>
          <label for='sort-products'>Sort by: </label>
          <select id='sort-products' name='sort-options' onchange="sortProducts()" />
            <option value='none'>None</option>
            <option value='newest'>Newest</option>
            <option value='oldest'>Oldest</option>
            <option value='low-high'>Low price - High price</option>
            <option value='high-low'>High price - Low price</option>
          </select>
        </div>
      </div>
      <div class='product-container'>
        <div id="product-list" class='row row-cols-4 row-col-md-1'>
          {{#each products}}
          {{#each products}}
            <div class='col'>
            <div class='product mx-1 my-2'>
              <img class='product-img' src='/assets/img/product.png' />
              <div class='product-details'>
                <p class='product-name'>{{this.name}}</p>
                <p class='product-branch'>{{this.manufacturer}}</p>
                <p class='product-price'>{{this.price}} ₫</p>
              </div>
            </div>
          </div>
          {{/each}}

          {{!-- <div class='col'>
              <div class='product mx-1 my-2'>
                <img class='product-img' src="https://static.nike.com/a/images/c_limit,w_592,f_auto/t_product_v1/e6da41fa-1be4-4ce5-b89c-22be4f1f02d4/air-force-1-07-shoes-WrLlWX.png" />
                <div class='product-details'>
                  <p class='product-name'>{{this.name}}</p>
                  <p class='product-branch'>{{this.manufacturer.name}}</p>
                  <p class='product-price'>{{this.price}} ₫</p>
                  <p class="product-status">{{this.status}}</p>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
      
      <nav aria-label="page-navigation">
        <ul class="pagination" id="product-pagination">
          {{!-- <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li> --}}
        </ul>
      </nav>
    </div>
  </div>
</div>
<script src='js/range-price.js'></script>
<script src='js/customer-products.js'></script>
