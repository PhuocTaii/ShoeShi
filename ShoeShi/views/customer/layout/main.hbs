<html>
  <head>
    <meta charset='utf-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta
      name='viewport'
      content='width=device-width, initial-scale=1, shrink-to-fit=no'
    />
    <meta name='description' content='' />
    <meta name='author' content='' />
    <title>ShoeShi</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN'
      crossorigin='anonymous'
    />
    <link href='/stylesheets/styles.css' rel='stylesheet' />
    <link href='/stylesheets/customer/style.css' rel='stylesheet' />
    <link href='/stylesheets/customer/{{extraStyles}}' rel='stylesheet' />

    <link
      href='https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css'
      rel='stylesheet'
    />
  </head>
  <body>
    <!-- Header -->
    <header id='header-container'>
      <a class='logo-container' href='/'>
        <img src='/assets/img/logo.png' alt='logo' />
        SHOESHI
      </a>
      <!-- Menu header -->
      <nav class='menu-header'>
        <a href='/products'>Men</a>
        <a href='/products'>Women</a>
        <a href='/products'>Kids</a>
        <div class='search-bar'>
          <i class='ri-search-2-line'></i>
          <input type='text' placeholder='Search...' />
        </div>
        <a class='cart' href='/cart'>
          <i class='ri-shopping-cart-line'></i>
          <div class='number-cart-items'>
            2
          </div>
        </a>
        <a href='/login'><i class='ri-user-3-line'></i></a>
      </nav>
      <!-- End Menu header -->

      <!-- Menu sidebar -->
      <a
        class='toggle-menu-sidebar'
        data-bs-toggle='offcanvas'
        href='#menu-sidebar'
        role='button'
        aria-controls='offcanvasExample'
      >
        <i class='ri-menu-line'></i>
      </a>
      <div
        class='offcanvas offcanvas-end'
        tabindex='-1'
        id='menu-sidebar'
        aria-labelledby='offcanvasWithBothOptionsLabel'
      >
        <div class='offcanvas-header'>
          <button
            type='button'
            class='btn-close'
            data-bs-dismiss='offcanvas'
            aria-label='Close'
          ></button>
        </div>
        <div class='offcanvas-body'>
          <a href='/products/men'>Men</a>
          <a href='/products/women'>Women</a>
          <a href='/products/kids'>Kids</a>
          <div class='search-bar'>
            <i class='ri-search-2-line'></i>
            <input type='text' placeholder='Search...' />
          </div>
          <a class='cart' href='/cart'>
            <i class='ri-shopping-cart-line'></i>
            <div class='number-cart-items'>
              2
            </div>
          </a>
          <a href='/login'><i class='ri-user-3-line'></i></a>
        </div>
      </div>
      <!-- End Menu sidebar -->
    </header>
    <!-- End Header -->

    <!-- Main content of page -->
    <div class='page-content'>
      <div class='page-main-content'>
        {{{body}}}
      </div>
    </div>
    <!-- End Main content of page -->

    <!-- Footer -->
    <footer class='mt-auto'>
      <div class='helper-links'>
        <a class='heading' href='#'>ABOUT SHOESHI</a>
        <div class='get-help'>
          <div class='heading'>GET HELP</div>
          <a href='#'>Delivery</a>
          <a href='#'>Payment options</a>
          <a href='#'>Contact us</a>
        </div>
      </div>
      <div class='social-links'>
        <a href='#'><i class='ri-facebook-circle-fill'></i></a>
        <a href='#'><i class='ri-instagram-line'></i></a>
      </div>
    </footer>
    <!-- End Footer -->

    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL'
      crossorigin='anonymous'
    ></script>
  </body>
</html>